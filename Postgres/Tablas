Tablas

Hallazgos
int		id_hallazgos (PK)
string	nombre_hallazgo_vulnerabilidad
string	descripción_hallazgo
string	solucion_recomendacion_halazgo
string	referencias_hallazgo
int		id_cvss (FK) array******
string	r_ejecutivo_hallazgo
string	recomendación_general_hallazgo
int		id_sitios (FK)


CVSS
int		id_cvss (PK)
string	nivel_cvss
string	vector_cvss
string	datos_cvss
string	enlace_cvss


Sitios
int		id_sitios (PK)
string	descripción_sitios
string	dir_ip_sitios	array
string	dependecias_sitios array
string	url_sitios


Revisiones
int		id_revision (PK)
bool	tipo_revision (0 = oficio, 1 = circular)
int		id_usuarios (FK)
(string	select Nombre from Usuarios where id_usuarios = x;)
string	status_revision
date	fecha_revision
int		id_hallazgos (FK)


Comentarios
int		id_cometarios (PK)
string	comentario
int		id_usuarios (FK)
int		id_revision (FK)


Usuarios
int		id_usuarios (PK)
string	nombre_usuario
string	correo



